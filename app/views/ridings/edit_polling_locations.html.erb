<h1 class="text-xl font-semibold leading-6 text-gray-900">Editing <%= @riding.name %> - <%= @riding.riding_code %></h1>
  <%= form_with model: @riding, id: "form" do |f| %>
    <div class="mt-6 p-6 border border-gray-500 rounded-lg grid grid-cols-7 gap-y-2">
      <div class="col-span-2 font-medium">
        Title
      </div>

      <div class="col-span-1 font-medium">
        Address
      </div>

      <div class="col-span-1 font-medium">
        City
      </div>

      <div class="col-span-1 font-medium">
        Postal code
      </div>

      <div class="col-span-1 font-medium">
        Polls
      </div>

      <div class="col-span-1 font-medium">
        Actions
      </div>

      <div class="polling_locations col-span-7 grid grid-cols-7">
      <%= f.fields_for :polling_locations do |polling_location| %>
            <%= render "polling_location_fields", f: polling_location %>
      <% end %>
      </div>
    </div>
    <div class="mt-4">
      <%= link_to_add_association "Add new Polling Location", f, :polling_locations,
                                  class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded",
                                  data: {association_insertion_node: '.polling_locations', association_insertion_method: :append}%>
    </div>
    <br>
    <%= f.submit "Save", class: "mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <%= turbo_frame_tag "update_errors" do %>
    <% end %>
  <% end %>
